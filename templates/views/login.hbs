
{{>header}}
    </section>
    <!-- search-result-wrapper -->
   <section>
    <div class="breadcrumb-top-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12 col-xl-12">
                   <div class="section-bradcrumb">
                       <!-- left -->
                       <div class="breadcrumb-left">
                        <ul>
                            <li><a href="index.html">Home</a></li>
                            <li>Login</li>
                        </ul>
                        <h4><span>User Login</span></h4>
                       </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-section-wrapper ptb-50">
        <div class="container">
            <div class="row">
                <!-- login-left -->
                <div class="col-md-6 col-lg-6 col-xl-6 col-12.col-sm-12">
                    <div class="login-left">
                        <img src="assets/images/bg/login-banner.png" alt="banner.png">
                    </div>
                   
                </div>
                <!-- login-right -->
                <div class="col-md-5 col-lg-5 col-xl-5 col-12.col-sm-12">
                     {{#if errorMsg}}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>{{errorMsg}}</strong> 
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                    {{/if}}
                      {{#if emptyMsg}}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>{{emptyMsg}}</strong> 
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                    {{/if}}
                    <div class="login-right-box">
                      <div class="card">
                          <div class="card-body">
                            <form action="/doctor-dashboard" method="post">
                                <h5>Login</h5>
                                <!-- phone-field -->
                                <div class="form-group">
                                    <input type="text" name="phone">
                                    <label >Phone</label>
                                </div>
                                <!-- Password-field -->
                                <div class="form-group">
                                    <input type="password"  name="password">
                                    <label for="password">Password</label>
                                </div>
                                <!-- forgot-password -->
                                <div class="form-group">
                                    <a href="#" class="forgot-pass">Forgot Password?</a>
                                </div>
                                 <!-- Submit-password -->
                                <div class="form-group">
                                    <input type="submit" class="submit-button" value="Login" name="l_login" id="l_login">
                                </div>
                                <!-- or-devider -->
                                <div class="form-group">
                                    <span class="divider">Or</span>
                                </div>
                                <!-- social-media-login-option -->
                                <div class="social-login-option">
                                    <a href="#" class="btn btn-primary"><i class="fa fa-facebook mr-1"></i>Login</a>
                                    <a href="#" class="btn btn-danger"><i class="fa fa-google mr-1"></i>Login</a>
                                </div>
                                <!-- social-media-login-option -->
                                <div class="form-group text-center">
                                    <p>dont't have an account?<a href="/doctor-signup">Register</a></p>
                                </div>
                            </form>
                          </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   </section>
   <!-- footer-section -->
   {{>footer}}